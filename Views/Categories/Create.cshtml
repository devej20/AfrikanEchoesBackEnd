@model AfrikanEchoes.ViewModels.Categories.CategoryCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<!--begin::Card-->
<div class="card card-custom gutter-b example example-compact col-lg-6">
    <div class="card-header">
        <h3 class="card-title">New Audio File</h3>
        <div class="card-toolbar">

        </div>
    </div>
    <!--begin::Form-->
    <form method="post" enctype="multipart/form-data" asp-action="Create" class="form">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-form__group">
                <label asp-for="CoverImage" class="control-label">
                </label>
                <div></div>
                <div class="custom-file">
                    <input asp-for="CoverImage" type="file" class="form-control custom-file-input" id="cover_image">
                    <label class="custom-file-label" for="customFile">
                        Choose Image
                    </label>
                </div>
                <span asp-validation-for="CoverImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>

        </div>
    </form>
    <!--end::Form-->
</div>
<!--end::Card-->
